<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_image_view"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/logo_charcter">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/main_title_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="TITLE"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/main_post_place"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:text="지역구 지역동"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/main_uploaded_time"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_weight="5"
                        android:text="업로드시간"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="6">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/explain_for_small_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:text="5"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_toRightOf="@+id/main_small_chat"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/main_small_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:src="@drawable/main_small_chat16"
                            android:layout_toRightOf="@+id/explain_for_small_heart"
                            android:layout_alignParentBottom="true"/>
                        <TextView
                            android:id="@+id/explain_for_small_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:text="7"
                            android:textColor="@color/colorBlack"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/main_small_heart"
                            android:textSize="16sp"
                            android:layout_gravity="bottom"/>
                        <ImageView
                            android:id="@+id/main_small_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/main_small_heart16" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>