<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    package="com.cukorders.helping">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_charcter"
        android:label="너의 부름"
        android:roundIcon="@drawable/logo_charcter"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/primary_btn_bg"
            android:value="AIzaSyA9CPuZCP0dwE7PvX9R3IECiL3AzEYW7D8" />

        <activity
            android:name=".LoadingActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AuthActivity"></activity>
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>