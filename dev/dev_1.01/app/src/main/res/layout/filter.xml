<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/filter_linear"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorLogo">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorLogo"
            app:srcCompat="@drawable/back_icon_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text= "관심 카테고리 설정"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홈 화면에서 집중적으로 보고싶은\n 카테고리만 체크하세요. "
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최소 1개 이상 선택되어 있어야 합니다."
            android:gravity="center"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ask_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의뢰 유형"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ask_type"
                android:layout_centerVertical="true"
                android:text="복수 선택 가능"/>
        </RelativeLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_buy_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매대행 (음식)" />

    <CheckBox
        android:id="@+id/cb_buy_etc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매대행" />
    <CheckBox
        android:id="@+id/cb_food_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달 (음식)" />

    <CheckBox
        android:id="@+id/cb_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달" />

    <CheckBox
        android:id="@+id/cb_cleaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="청소" />

    <CheckBox
        android:id="@+id/cb_teach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="과외" />

    <CheckBox
        android:id="@+id/cb_etc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기타" />

</LinearLayout>