<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="30dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@android:color/transparent"
            android:src="@drawable/profile128">
        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageButton
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/userProfileImage"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="-0dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/camera_black_48"></ImageButton>/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/profile_form_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="에러입니다"
            android:textColor="@color/colorError"
            android:textSize="18dp"
            android:visibility="invisible">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/profile_form_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="에러입니다"
            android:textColor="@color/colorError"
            android:textSize="18dp"
            android:visibility="invisible">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="10"
        >
        <EditText
            android:id="@+id/userNickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:hint="닉네임"></EditText>

        <Button
            android:id="@+id/nicknameCheck"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="8"
            android:background="@drawable/primary_btn_bg"
            android:text="중복확인"
            android:textColor="@color/colorBlack"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:id="@+id/genderLayout"
        >
        <Button
            android:id="@+id/maleBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="3dp"
            android:layout_weight="5"
            android:background="@color/colorGrayButton"
            android:text="남자"
            android:textColor="@color/colorBlack"></Button>

        <Button
            android:id="@+id/femaleBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="5"
            android:background="@drawable/select_button2"
            android:text="여자"
            android:textColor="@color/colorBlack">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/button10s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="10대"
            android:layout_weight="2"
            android:background="@color/colorGrayButton"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/button20s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="20대"
            android:layout_weight="2"
            android:background="@color/colorGrayButton"

            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/button30s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="30대"
            android:layout_weight="2"
            android:background="@color/colorGrayButton"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/button40s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="40대"
            android:layout_weight="2"
            android:background="@color/colorGrayButton"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/button50s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="50대이상"
            android:layout_weight="2"
            android:background="@color/colorGrayButton"
            android:textColor="@color/colorBlack">
        </Button>
    </LinearLayout>

    <Button
        android:id="@+id/profileRegisterBt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gps_button_shape"
        android:text="회원가입 완료"
        android:textColor="@color/colorWhite">
    </Button>
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gps_button_shape"
        android:text="로그아웃"
        android:textColor="@color/colorWhite">
    </Button>
</LinearLayout>