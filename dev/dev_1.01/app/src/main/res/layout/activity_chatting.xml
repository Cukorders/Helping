<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorLogo"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/chattingActivity_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon_white"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/chattingActivity_recent_mission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text= "채팅하기"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="9">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chattingActivity_userProfileImage"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:src="@drawable/user_icon">
            </de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/chattingActivity_userProfileNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="사용자 닉네임"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/chattingActivity_pb"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar" />
                    <TextView
                        android:id="@+id/chattingActivity_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/face"
                        android:text="100점"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>
                    <ImageView
                        android:id="@+id/chattingActivity_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/face_manner_darkblue"
                        android:layout_toEndOf="@+id/pb"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="10">
            <Button
                android:id="@+id/chattingActivity_accept"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_marginRight="3dp"
                android:background="@drawable/select_button"
                android:text="수락"
                android:textSize="16sp" />

            <Button
                android:id="@+id/chattingActivity_decline"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_marginLeft="3dp"
                android:background="@drawable/select_button"
                android:text="거절"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chattingActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/chattingActivity_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/add_icon48"
            android:background="@android:color/transparent"/>
        <EditText
            android:id="@+id/chattingActivity_editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/chattingActivity_button"
            android:text="SEND"
            android:textColor="@color/colorWhite"
            android:background="@drawable/select_button"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>